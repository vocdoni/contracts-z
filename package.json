    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "chai": "^4.5.0",
    "hardhat": "^2.22.12",
    "prettier": "^3.5.2",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^5.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
