{
  "name": "vocdoni-davinci-contracts",
  "version": "0.0.1",
  "description": "Smart contracts powering DAVINCI's digital voting protocol",
  "directories": {
    "lib": "lib",
    "test": "test",
    "src": "src"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:sol": "solhint './src/*.sol'",
