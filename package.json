    "mythril": "myth a ./src/*.sol --solc-json mythril.config.json",
    "slither": "slither ./src/*.sol"
  },
  "keywords": [
    "digital",
    "voting",
    "protocol",
    "blockchain",
    "ethereum",
    "vocdoni",
    "evm",
    "solidity"
